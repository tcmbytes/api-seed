{
  "coverageDirectory": "./reports/coverage",
  "coverageReporters": [
    "lcov"
  ],
  "maxWorkers": "50%",
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1",
    "^@tests/(.*)$": "<rootDir>/tests/$1"
  },
  "preset": "ts-jest",
  "reporters": [
    "default",
    [
      "jest-html-reporters",
      {
        "publicPath": "./reports",
        "filename": "test-results.html",
        "expand": true,
        "theme": "darkTheme"
      }
    ],
    [
      "jest-junit",
      {
        "outputDirectory": "./reports",
        "outputName": "test-results.xml"
      }
    ]
  ],
  "testMatch": [
    "**/*.test.ts"
  ]
}